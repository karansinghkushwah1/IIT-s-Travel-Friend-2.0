<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lastpage"
    tools:context=".feedbackform">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/thnxforfilling"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:layout_marginTop="60dp"
            android:fontFamily="@font/alegreya_sc"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/thank_you_for_your_feedback"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arbutus_slab"
            android:gravity="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Username or Email"
            android:textColor="#5de6d2"
            android:textSize="21sp"
            tools:ignore="TextContrastCheck" />

        <EditText
            android:id="@+id/Username"
            android:layout_width="374dp"
            android:layout_height="70dp"
            android:ems="10"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:importantForAutofill="no"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            tools:ignore="TextContrastCheck" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/arbutus_slab"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:text="Write your Feedback"
            android:textColor="#5de6d2"
            android:textSize="21sp"
            tools:ignore="TextContrastCheck" />


        <EditText
            android:id="@+id/writefeedback"
            android:layout_width="375dp"
            android:layout_height="150dp"
            android:ems="10"
            android:layout_marginTop="15dp"
            android:importantForAutofill="no"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:inputType="textPersonName"
            android:padding="12dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            tools:ignore="TextContrastCheck" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/Sendfeedbackb"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_gravity="center"
            android:background="@drawable/mybutton"
            android:onClick="sendfeedback"
            android:padding="12dp"
            android:text="@string/send_feedback"
            android:textColor="#FDFDFD" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>