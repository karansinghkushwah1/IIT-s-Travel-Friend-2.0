<!--                    android:importantForAutofill="no"-->
<!--                    android:inputType="textPassword"-->
<!--                    android:minHeight="48dp"-->
<!--                    tools:ignore="TextContrastCheck" />-->


            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>